# Computer Project Ruby Dependencies
source 'https://rubygems.org'

# Core dependencies
gem 'concurrent-ruby', '~> 1.2'

# CLI enhancement
gem 'thor', '~> 1.2'  # Alternative to OptionParser for more complex CLI
gem 'colorize', '~> 0.8'  # For colored terminal output

# Development dependencies
group :development do
  gem 'rspec', '~> 3.12'
  gem 'rubocop', '~> 1.56'
  gem 'pry', '~> 0.14'  # Debugging
end

# Optional enhanced features
gem 'tty-prompt', '~> 0.23'  # For interactive mode
gem 'tty-table', '~> 0.12'   # For formatted table output
gem 'tty-progressbar', '~> 0.18'  # For progress indicators